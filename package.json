{
  "name": "wagn-project-tracker",
  "version": "1.0.0",
  "private": true,
  "description": "A simple, offline-first project tracker using React, Zustand, and Tailwind CSS for organizing, estimating, and tracking project tasks with Markdown import/export.",
  "type": "module",
  "scripts": {
    "dev": "vite",
    "build": "tsc && bun run tailwind:build && vite build",
    "format": "prettier --write .",
    "preview": "vite preview",
    "deploy": "bun run format && bun run build && bunx wrangler pages deploy dist --project-name wagn-project-tracker",
    "tailwind": "tailwindcss -i ./base.css -o ./src/index.css --watch",
    "tailwind:build": "tailwindcss -i ./base.css -o ./src/index.css --minify"
  },
  "dependencies": {
    "@heroicons/react": "^2.2.0",
    "nanoid": "^5.1.5",
    "react": "^18.3.1",
    "react-dom": "^18.3.1",
    "react-hot-toast": "^2.4.1",
    "react-modal": "^3.16.3",
    "zustand": "^4.5.2"
  },
  "devDependencies": {
    "@types/react-modal": "^3.16.3",
    "@types/bun": "latest",
    "@types/react": "^18.3.3",
    "@types/react-dom": "^18.3.0",
    "@typescript-eslint/eslint-plugin": "latest",
    "@typescript-eslint/parser": "latest",
    "@vitejs/plugin-react": "^4.3.1",
    "autoprefixer": "^10.4.19",
    "eslint": "latest",
    "eslint-plugin-react": "latest",
    "postcss": "^8.4.38",
    "tailwindcss": "^3.4.4",
    "typescript": "^5.4.5",
    "vite": "^5.2.13"
  },
  "author": "Wagn AI <hello@wagn.ai> (https://wagn.ai)",
  "licenses": [
    {
      "type": "MIT",
      "url": "https://github.com/AviSantoso/wagn-project-tracker/blob/main/LICENSE"
    }
  ],
  "license": "MIT",
  "keywords": [
    "project tracker",
    "task management",
    "estimation",
    "pert",
    "react",
    "zustand",
    "tailwind css",
    "markdown",
    "offline first",
    "vite"
  ],
  "repository": {
    "type": "git",
    "url": "git+https://github.com/AviSantoso/wagn-project-tracker.git"
  },
  "bugs": {
    "url": "https://github.com/AviSantoso/wagn-project-tracker/issues"
  },
  "homepage": "https://github.com/AviSantoso/wagn-project-tracker#readme"
}
